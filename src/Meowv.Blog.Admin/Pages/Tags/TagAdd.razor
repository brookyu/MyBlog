@page "/tags/add"
@inherits PageBase

<PageContainer>
    <Breadcrumb>
        <Breadcrumb>
            <BreadcrumbItem><Icon Type="home"></Icon></BreadcrumbItem>
            <BreadcrumbItem><Icon Type="tags"></Icon><span>标签管理</span></BreadcrumbItem>
            <BreadcrumbItem><Icon Type="plus-square"></Icon><span>新增标签</span></BreadcrumbItem>
        </Breadcrumb>
    </Breadcrumb>
    <ChildContent>
        <Card>
            <Form Model="@input"
                  LabelColSpan="8"
                  WrapperColSpan="8"
                  OnFinish="HandleSubmit">
                <FormItem Label="标签名称">
                    <Input @bind-Value="@context.Name" />
                </FormItem>
                <FormItem Label="标签别名">
                    <Input @bind-Value="@context.Alias" />
                </FormItem>
                <FormItem WrapperColOffset="8" WrapperColSpan="8">
                    <Button Type="@ButtonType.Primary" HtmlType="submit">保存</Button>
                </FormItem>
            </Form>
        </Card>
    </ChildContent>
</PageContainer>